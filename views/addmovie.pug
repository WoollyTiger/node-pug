doctype html 
html 
  head 
    title Add movie 
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")

  body 
    div.container
      div
        h1.display-1 New movie 
        form(action='/addmovie', method='POST')
          div
            label(for="title").form-label Title
              input(id='title' type='text', name='title').form-control.form-control-lg
          div 
            label(for="director").form-label Director
              input(id='director' type='text', name='director').form-control.form-control-lg
          div 
            label(for="year").form-label Year
              input(id='year' type='number', name='year').form-control.form-control-lg
          div 
            input(type='submit', value='Add').btn.btn-primary
